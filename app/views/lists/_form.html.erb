<%= form_for @list do |f| %>
	<%= f.label :name, "Name" %>
	<%= f.text_field :name%>		
	<%= f.label :note,  "Note"%>
	<%= f.text_area :note%>
	<%= f.label :due_date,  "Due_date"%>
	<%= f.text_field :due_date%>
	<%= f.submit %>
<%end%>
<% if @list.errors.present? %>
	<ul>
		<% @list.errors.each do |error, message| %>
			<li> <%= "#{error.capitalize}  #{message}"%></li>
		<% end %>
	</ul>
<% end %>